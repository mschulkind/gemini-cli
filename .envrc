# .envrc for gemini-cli development
# This file is intended for use with direnv (https://direnv.net/).
# It sets recommended environment variables for local development.

# Development mode - start CLI in dev mode when using npm run start
export DEV=true

# Recommended Node version (development uses ~20.19.0 per CONTRIBUTING.md)
# If you use nvm/asdf this will be detected from .nvmrc/.tool-versions
export NODE_OPTIONS=""

# Sandbox settings: enable container-based sandboxing by default for safety.
# Set to 'docker' or 'podman' to force a specific provider. Set to 'false' to disable.
#export GEMINI_SANDBOX=docker

# Optionally set your Google Cloud project when using Code Assist/VertexAI
# export GOOGLE_CLOUD_PROJECT="your-project-id"

# Optionally set API keys if you prefer API-key auth
# export GEMINI_API_KEY="your_api_key_here"

# Keep CLI version visible to child processes
export CLI_VERSION="$(node -p "require('./package.json').version")"

# Helpful defaults for local dev
export NODE_ENV=development

# Allow projects to override; direnv will automatically load/unload this file.
